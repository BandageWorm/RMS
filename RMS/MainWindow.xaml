<Window x:Name="MainWindow1" x:Class="RMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMS"
        mc:Ignorable="d"
        Title="Restaurant Management System" Height="600" Width="900" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="290"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="search_item" Margin="20,30,20,10">
            <DataGrid.Columns>
                <DataGridTextColumn Width="50" Header="ID" Binding="{Binding item_id}"/>
                <DataGridTextColumn Width="100" Header="Item" Binding="{Binding item_name}"/>
                <DataGridTextColumn Width="100" Header="Price" Binding="{Binding price}"/>
                <DataGridTextColumn Width="300" Header="info" Binding="{Binding item_info}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="order_item" Margin="20,25,20,10" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100" Header="Item" Binding="{Binding item_name}"/>
                <DataGridTextColumn Width="100" Header="Ammount" Binding="{Binding quantity}"/>
                <DataGridTextColumn Width="100" Header="Price" Binding="{Binding price}"/>
                <DataGridTextColumn Width="200" Header="info" Binding="{Binding item_info}"/>
            </DataGrid.Columns>
        </DataGrid>
        <RadioButton x:Name="rbtQC" IsChecked="True" GroupName="searchvia" Content="Quick Code" FontSize="15" HorizontalAlignment="Left" Margin="178,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbtID" GroupName="searchvia" Content="ID" FontSize="15" HorizontalAlignment="Left" Margin="135,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSearch" Height="20" Margin="75,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>
        <Button x:Name="btSearch" Content="Search" Height="20" FontSize="15" Margin="450,10,90,0" VerticalAlignment="Top" Grid.Row="2" Click="search_Click"/>
        <Button x:Name="btOrderItem" Content="Order" Height="20" FontSize="15" Margin="0,10,20,0" VerticalAlignment="Top" Grid.Row="2" Click="order_Click" HorizontalAlignment="Right" Width="60"/>
        <Button x:Name="btAddOrder" Content="Create Order" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,20,0" Grid.Row="2" VerticalAlignment="Top" Width="100" Click="btAddOrder_Click"/>
        <TextBox x:Name="tbOrderTable" Text="Input table NO" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="20,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <!--下面的tbk需要设置为在order datagrid上显示当前的order_no-->
        <TextBlock x:Name="tbkOrder" HorizontalAlignment="Left" Margin="20,0" TextWrapping="Wrap" Text="{Binding orderNo}" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock x:Name="tbkSearch" HorizontalAlignment="Left" Margin="20,5,0,0" TextWrapping="Wrap" Text="Search menu:" VerticalAlignment="Top" Height="20"/>
        <TextBlock x:Name="tbkSearchWord" HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Search:" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkAmmount" FontSize="15" HorizontalAlignment="Left" Margin="295,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Ammount:" VerticalAlignment="Top"/>
        <TextBox x:Name="tbAmmount" Height="20" Margin="373,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>
    </Grid>
</Window>